{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    },
    {
      "src": "static/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "functions": {
    "app.py": {
      "runtime": "python3.9",
      "maxDuration": 10,
      "memory": 512
    }
  },
  "env": {
    "PYTHONUNBUFFERED": "1",
    "FLASK_ENV": "production",
    "SECRET_KEY": "your_secret_key_placeholder",
    "DATABASE_URL": "sqlite:///users.db",
    "UPLOAD_FOLDER": "uploads/",
    "FLASK_RUN_PORT": "5000"
  },
  "static": {
    "public": "static",
    "cleanUrls": true
  },
  "installCommand": "pip install -r requirements.txt",
  "buildCommand": null,
  "framework": "flask",
  "regions": ["iad1", "sfo1"],
  "cache": {
    "headers": {
      "cache-control": "public, max-age=31536000, immutable"
    }
  }
}